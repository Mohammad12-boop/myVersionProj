<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4840A3"
    tools:context=".Teacher_Interfaces">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="420dp"
        android:layout_height="700dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:background="#D9E5FF"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/alfa_slab_one"
            android:text="@string/student_panel"
            android:textAlignment="center"
            android:textColor="#4840A3"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btnSchedule"
            style="@style/CustomButton"
            android:layout_width="219dp"
            android:layout_height="81dp"
            android:layout_margin="20dp"
            android:fontFamily="@font/capriola"
            android:text="@string/show_schedule"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnMarks"
            style="@style/CustomButton"
            android:layout_width="219dp"
            android:layout_height="81dp"
            android:layout_margin="20dp"
            android:fontFamily="@font/capriola"
            android:text="@string/view_marks"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnAssignments"
            style="@style/CustomButton"
            android:layout_width="219dp"
            android:layout_height="81dp"
            android:layout_margin="20dp"
            android:fontFamily="@font/capriola"
            android:text="@string/assignments"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="283dp"
        android:layout_height="84dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/w3_school"
        android:textColor="#D9E5FF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- التطبيق كله -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- اللون الرئيسي -->
        <item name="colorPrimary">#2D46B9</item>
        <item name="colorPrimaryVariant">#1E2A78</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- لون الخلفية -->
        <item name="android:windowBackground">#F3F6FD</item>
<!--        <item name="colorBackground">#F3F6FD</item>-->

        <!-- ألوان ثانوية -->
        <item name="colorSecondary">#FF6B6B</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- خط النص -->
        <item name="android:textColor">#333333</item>
<!--        <item name="android:fontFamily">@font/roboto</item>-->

        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="colorControlNormal">@android:color/transparent</item>


    </style>

    <!-- كبسات -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#F9CD6A</item>
        <item name="android:textColor">#4840A3</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- EditText -->
    <style name="CustomEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#FFFFFF</item>
        <item name="boxStrokeColor">#2D46B9</item>
        <item name="android:textColor">#333333</item>
<!--        <item name="android:fontFamily">@font/roboto</item>-->
    </style>

    <!-- TextView -->
    <style name="CustomTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">#4840A3</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/capriola</item>
        <item name="android:textAlignment">center</item>

    </style>

</resources>